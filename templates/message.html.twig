{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <style>
        main {
            padding: 20vh 30vw;
            text-align: center;
            min-height: 70vh;
        }
    </style>
{% endblock %}

{% block body %}
    <main>
        <h1>{{ title }}</h1>
        <p>{{ message }}</p>
        <a href="{% if is_url %}{{ redirect_app }}{% else %}{{ path(redirect_app) }}{% endif %}">Clickez ici pour être redirigé</a>
    </main>
{% endblock %}
