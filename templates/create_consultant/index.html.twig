{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #form {
            margin: 20vh 30vw 20vh 30vw;
        }

        .moveShadowBox {
            border: solid 1px black;
            padding: 3%;
            background-color: #FFF9F9;
        }
        #button {
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}
    <main>
        <div class="col-lg-auto order-lg-1" id="form">
            <div class="moveShadowBox">
                <h2>Ajouter un consultant&nbsp;:</h2>
                {{ form_start(form) }}
                {{ form_row(form.email, { 'label' : 'Email :' }) }}
                {{ form_row(form.password, { 'label' : 'Mot de passe :' }) }}
                {{ form_row(form.recruiter, { 'label' : 'Cochez cette case si vous voulez ajouter le role de recruteur' }) }}
                {{ form_row(form.candidate, { 'label' : 'Cochez cette case si vous voulez ajouter le role de candidats' }) }}
                <div id="button">
                    {{ form_row(form.Inscription, { 'label' : "AJOUTER" }) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}
